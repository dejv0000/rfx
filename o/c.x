      <dc:creator>조선일보</dc:creator>
      <description/>
      <pubDate>Thu, 26 Jun 2025 15:50:00 +0000</pubDate>
      <content:encoded>&lt;figure&gt;&lt;img align="center" src="https://cloudfront-ap-northeast-1.images.arcpublishing.com/chosun/R3ACWQTPYFB6TPJ4ZNHLGWJMA4.jpg"&gt;&lt;figcaption&gt;&lt;small&gt;&lt;/small&gt;&lt;/figcaption&gt;&lt;/figure&gt;&lt;br&gt;&lt;br&gt;&lt;br&gt;&lt;br&gt;</content:encoded>

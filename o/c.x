      <guid isPermaLink="true">https://www.chosun.com/national/national_general/2024/09/21/HY437SDWQBBB3DMRJGWG23EBGY/</guid>
      <description/>
      <pubDate>Fri, 20 Sep 2024 15:30:00 +0000</pubDate>
      <content:encoded>&lt;figure&gt;&lt;img align="center" src="https://cloudfront-ap-northeast-1.images.arcpublishing.com/chosun/5YKNSVTPVZCIVCBXS2NYHPLQ54.jpg"&gt;&lt;figcaption&gt;&lt;small&gt;&lt;/small&gt;&lt;/figcaption&gt;&lt;/figure&gt;&lt;br&gt;&lt;br&gt;</content:encoded>
